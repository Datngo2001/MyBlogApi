{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist",
    "baseUrl": "src",
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.json", 
    ".env",
  ],
  "exclude": ["node_modules", "src/http", "src/logs", "src/tests"]
}
